---
import { getLangFromUrl } from '../i18n/utils';
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;

const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html lang={lang}>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
</head>
<body>
	<div class="container">
		<slot />
	</div>
</body>
</html>

<style>
		* {
			all: initial;
			box-sizing: border-box;
		}

		html, body {
			--primary: #9cd8d6;
			--secondary: #173A39;
			--bcg: white;
			font-size: 16px;
			text-align: center;
		}

		.container {
			min-height: 100dvh;
			display: flex;
			justify-content: center;
			align-items: center;
			text-align: center;
		}
</style>
